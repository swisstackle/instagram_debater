# Instagram API Configuration
INSTAGRAM_APP_SECRET=your_app_secret_here
INSTAGRAM_ACCESS_TOKEN=your_access_token_here
INSTAGRAM_VERIFY_TOKEN=your_verify_token_here
# INSTAGRAM_USERNAME is optional: the username is automatically read from the OAuth token
# (state/instagram_token.json) when a user logs in via the dashboard.
# Only set this as a fallback if you are not using the OAuth login flow.
# INSTAGRAM_USERNAME=your_instagram_username_here

# Instagram OAuth Configuration (for Business Login)
INSTAGRAM_CLIENT_ID=your_facebook_app_id_here
INSTAGRAM_CLIENT_SECRET=your_facebook_app_secret_here
INSTAGRAM_REDIRECT_URI=http://127.0.0.1:5000/auth/instagram/callback

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# LLM Model Configuration
MODEL_NAME=google/gemini-flash-2.0
MAX_TOKENS=2000
TEMPERATURE=0.7

# Bot Configuration
AUTO_POST_ENABLED=false

# Mode Storage Configuration
# Type of storage for auto-post mode ('local' or 'tigris')
# - local: Uses local disk storage (state/mode.json)
# - tigris: Uses Tigris/S3-compatible object storage on Fly.io (shared across all machines)
# Use 'tigris' when running distributed (webhook, dashboard, processor on different machines)
MODE_STORAGE_TYPE=local

# Server Configuration
# Dashboard server settings
DASHBOARD_PORT=5000
DASHBOARD_HOST=127.0.0.1

# Webhook server settings
WEBHOOK_PORT=8000
WEBHOOK_HOST=0.0.0.0

# Comment Storage Configuration
# Type of storage for pending comments ('local' or 'tigris')
# - local: Uses local disk storage (state/pending_comments.json)
# - tigris: Uses Tigris/S3-compatible object storage on Fly.io
COMMENT_STORAGE_TYPE=local

# Audit Log Storage Configuration
# Type of storage for audit logs ('local' or 'tigris')
# - local: Uses local disk storage (state/audit_log.json)
# - tigris: Uses Tigris/S3-compatible object storage on Fly.io
# Default: local
AUDIT_LOG_STORAGE_TYPE=local

# OAuth Token Storage Configuration
# Type of storage for OAuth tokens ('local' or 'tigris')
# - local: Uses local disk storage (state/instagram_token.json)
# - tigris: Uses Tigris/S3-compatible object storage on Fly.io
# Default: local
# Note: Use 'tigris' when running distributed systems (webhook, dashboard, processor on different machines)
OAUTH_TOKEN_STORAGE_TYPE=local

# Tigris Object Storage Configuration (only needed when COMMENT_STORAGE_TYPE=tigris or AUDIT_LOG_STORAGE_TYPE=tigris)
# These credentials are generated when you create a Tigris bucket with: fly storage create
# AWS_ACCESS_KEY_ID=your_tigris_access_key_id_here
# AWS_SECRET_ACCESS_KEY=your_tigris_secret_access_key_here
# AWS_ENDPOINT_URL_S3=https://fly.storage.tigris.dev
# TIGRIS_BUCKET_NAME=your-bucket-name
# AWS_REGION=auto

# Prompt Storage Configuration
# Type of storage for prompt templates ('local' or 'tigris')
# - local: Uses local disk storage (state/prompts.json)
# - tigris: Uses Tigris/S3-compatible object storage on Fly.io (shared across all machines)
# Use 'tigris' when running distributed (webhook, dashboard, processor on different machines)
PROMPT_STORAGE_TYPE=local

# Article Configuration
# ARTICLES_CONFIG should be a JSON array with path, link, and optional is_numbered for each article
# is_numbered: true (default) - article uses Â§X.Y.Z citations, false - article does not use citations
ARTICLES_CONFIG=[{"path": "articles/sample_article.md", "link": "https://example.com/article1", "is_numbered": true}, {"path": "articles_unnumbered/sample_unnumbered_article.md", "link": "https://example.com/article2", "is_numbered": false}]
