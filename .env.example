# Instagram API Configuration
INSTAGRAM_APP_SECRET=your_app_secret_here
INSTAGRAM_ACCESS_TOKEN=your_access_token_here
INSTAGRAM_VERIFY_TOKEN=your_verify_token_here

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# LLM Model Configuration
MODEL_NAME=google/gemini-flash-2.0
MAX_TOKENS=2000
TEMPERATURE=0.7

# Bot Configuration
AUTO_POST_ENABLED=false

# Article Configuration
# Option 1: Multiple articles (recommended for supporting multiple topics)
# ARTICLES_CONFIG should be a JSON array with path and link for each article
ARTICLES_CONFIG=[{"path": "articles/article1.md", "link": "https://example.com/article1"}, {"path": "articles/article2.md", "link": "https://example.com/article2"}]

# Option 2: Single article (legacy, for backward compatibility)
# If ARTICLES_CONFIG is not set, these values will be used
ARTICLE_PATH=articles/arguments-against-the-big-three.md
ARTICLE_LINK=https://example.com/article
